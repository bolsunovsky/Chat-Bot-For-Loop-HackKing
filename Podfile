#Podfile
source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '10.0'
use_frameworks!
target 'weatherBot' do
    #HTTP networking library
    pod 'Alamofire', '~> 4.5'
    #Auto Layout library
    pod 'SnapKit', '~> 4.0.0'
    #library for downloading and caching images from API
    #pod 'Kingfisher', '~> 3.0'
    #Send Message TextInput
    pod 'Toolbar'
    #Messages TableView
    pod 'ReverseExtension'
    #Promise
    pod 'PromiseKit', '~> 4.4'
    pod 'PromiseKit/CoreLocation'
    pod 'PromiseKit/MapKit'
end
